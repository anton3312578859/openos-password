local os = require("os")
local io = require("io")
local term = require("term")
local sh = require("shell")
term.clear()
print("Security System installer")
print("")
print("ALERT")
print("This program for OpenOS 1.7.4")
print("if you have latest version problems can occur")
print("install? [Y/N]")
local agree = io.read()
    if agree == "Y" then
      sh.execute("mkdir /SecuritySystem")
      print("directory created")
      sh.execute("cd /SecuritySystem")
      sh.execute("wget https://raw.githubusercontent.com/anton3312578859/openos-password/master/sys-2-0 /SecuritySystem/sys.lua")
      print("sys.lua created")
      sh.execute("wget https://raw.githubusercontent.com/anton3312578859/openos-password/master/security%202-0 /SecuritySystem/security.lua")
      print("security.lua created")
      sh.execute("wget https://raw.githubusercontent.com/anton3312578859/openos-password/master/logout-2-0 /bin/logout.lua")
      print("logout.lua created")
      sh.execute("rm /init.lua")
      sh.execute("wget https://raw.githubusercontent.com/anton3312578859/openos-password/master/init-2-0 /init.lua")
      print("init.lua replaced")
      sh.execute("wget https://raw.githubusercontent.com/anton3312578859/openos-password/master/k-2-0 /SecuritySystem/k.lua")
      print("k created")
      print("password - 0000")
      print("Done! Reboot now? [Y/N]")
      local reboot = io.read()
      if reboot == "Y" then
      sh.execute("reboot")
      else
      print("returning to shell..")
      os.sleep(2)
      sh.execute("sh")
      end
    else
      print("returning to shell..")
      os.sleep(2)
      sh.execute("sh")
  end
